define WINGSIZE: 	0.3
define HEIGHT:		0.2

vertex FRONTPT: 	{0, 0.5, 0}
vertex TOPLEFT:		{-WINGSIZE, -0.5, HEIGHT}
vertex TOPRIGHT:	{WINGSIZE, -0.5, HEIGHT}
vertex BOTLEFT:		{-WINGSIZE, -0.5, -HEIGHT}
vertex BOTRIGHT:	{WINGSIZE, -0.5, -HEIGHT}

color ship:	{0.05, 0.1, 0.3}
color engine:	{0.2, 0.05, 0.05}

poly ship {FRONTPT, TOPRIGHT, TOPLEFT}
poly ship {FRONTPT, BOTLEFT, BOTRIGHT}
poly ship {FRONTPT, TOPLEFT, BOTLEFT}
poly ship {FRONTPT, BOTRIGHT, TOPRIGHT}

poly engine {TOPLEFT, TOPRIGHT, BOTRIGHT, BOTLEFT}

